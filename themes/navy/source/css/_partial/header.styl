#header-inner
  display: flex
  flex-flow: row nowrap
  align-items: center
  @media mq-mobile
    justify-content: center

#logo-wrap
  flex: 0 logo-size

#logo
  hide-text()
  background: url("/logo.svg")
  width: logo-size
  height: logo-size
  background-size: @width @height
  display: block

#main-nav
  display: none
  flex: 1 auto
  padding-left: 20px
  @media mq-normal
    display: block

.main-nav-link
  color: color-menu
  font-weight: menu-font-weight
  text-decoration: none
  line-height: logo-size
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  display: inline-block
  padding: 0 25px 0 15px
  &:hover
    opacity: 1
    color: color-link-hover

#search-input-wrap
  display: none
  position: absolute
  right: 0
  top: 0.5em
  // @media mq-normal
  //   display: block
  padding-left: 6px
  padding-bottom: 8px
  border-bottom: 1px solid color-gray
  &.on
    display: block

#search-input-icon
  color: #fff
  padding-right: 0.5em
  display: lock
  opacity: 0.7

#search-input
  background: none
  font-size: inherit
  font-family: font-title
  color: red
  outline: none
  -webkit-appearance: none

// 此处是顶部标题栏选择语言的css
#lang-select-wrap
  display: none
  position: absolute
  right: 0
  top: 0.5em
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit



// 新增
.m-hd {
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    width: 100%;
    min-height: 0;
    height: auto;
    z-index: 2;
}
.m-hd .m-hd-body-wrap {
    position: relative;
    background-color: #1c2b41;
    -webkit-transition: all 480ms;
    -moz-transition: all 480ms;
    transition: all 480ms;
    z-index: 6;
}
.m-hd .m-hd-ctrl {
    position: absolute;
    width: 500px;
    min-height: 30px;
    top: 0;
    left: 50%;
    margin-left: -250px;
    z-index: 4;
    -webkit-transition: all 480ms;
    -moz-transition: all 480ms;
    transition: all 480ms;
}
.m-hd .m-hd-body {
    position: relative;
    width: 1200px;
    height: 64px;
    margin: 0 auto;
}
// 此处是logo左上角靠右一点的logo
.m-hd span {
    position: relative;
    display: inline-block;
}
.m-hd .m-hd-body .m-hd-logo {
    /* margin-left: 20px; */
    /* width: 140px; */
    height: 64px;
}
.m-hd .m-hd-body .m-hd-logo .u-logo {
    position: relative;
    display: inline-block;
    color: #fff;
    /* width: 160px; */
    height: 24px;
    margin: 8px 6px 0 0;
    /* border-right: 1px solid #ccc; */
    vertical-align: top;
}
.m-hd .m-hd-body .m-hd-logo .u-logo .logo {
    display: inline-block;
    /* width: 96px; */
    width: 108px;
    height: 27px;
    margin-top: 11px;
    margin-right: 21px;
    /* background-image: url(/images/logo/hd_logo_white.png); */
    background-image: url(/images/logo/logo-white@2x.png);
    background-size: cover;
}

// 最上边的小标题
.m-hd .m-hd-body .m-hd-nav .m-hd-nav-tab {
    position: relative;
    display: inline-block;
    height: auto;
    vertical-align: top;
    font-size: 14px;
}
.m-hd .m-hd-body .m-hd-nav .m-hd-nav-tab .u-tab {
    min-width: 40px;
    margin-right: 26px;
    padding: 22px 2px 6px 2px;
    line-height: 20px;
    color: #fff;
    text-align: center;
}
.m-hd .m-hd-body .m-hd-nav {
    vertical-align: top;
    margin: 0;
}
    *{margin:0;padding:0;}
    html, body{height: 100%;width:100%;}
    body{
      display: block;
      position: relative;
      margin:0 auto;
      padding: 0;
      width:100%;
      min-width:1000px;
      background: #fff;
      color: #666;
      font-family: 'HanHei SC', PingHei, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, 'Microsoft Yahei', 'Hiragino Sans GB', 'Heiti SC', 'WenQuanYi Micro Hei', sans-serif;
    }

    a{ color:inherit;word-break: break-all;}
    a:active{ color: inherit;}
    a:link{ color: inherit;text-decoration:none;}
    h1{text-align: left;font-size: 28px;font-weight: normal;}
    h2{font-size: 20px;font-weight: normal;margin: 20px 0 10px 0;}
    h3{font-size: 16px;font-weight: normal;margin: 10px 0;}
    p{margin:8px 3px;}
    blockquote{margin:1em -0.5em;font-weight: bold;}
    code{display:inline-block;margin:2px 5px;padding:0 3px;overflow: hidden;
      background:#E5F0FF;font-size:15px;font-family: monospace;
      word-break:break-all;vertical-align: middle;}
    pre code{
      width:100%;    white-space: pre-wrap;
      word-wrap: break-word;}
    code span{word-break:break-all;word-wrap: break-word;}
    th {font-weight:normal;}
    #content td table{margin:0 1em;}
    table td td{border: 1px solid #black;}
    li{margin:5px 0;list-style:none;}
    input{outline: 0;}

    .u-btn-hollow {
      border: 1px solid transparent
    }

    .u-btn-hollow:before, .u-btn-hollow:after{content:'';position:absolute;-webkit-transition:all 500ms ease;-moz-transition:all 500ms ease;transition:all 500ms ease;}

    .u-btn-hollow:before{top:-1px;left:-1px;bottom:100%;right:100%;border-top:1px solid transparent;border-left:1px solid transparent;}

    .u-btn-hollow:after{bottom:-1px;right:-1px;top:100%;left:100%;border-bottom:1px solid transparent;border-right:1px solid transparent;}

    .u-btn-hollow:hover{}

    .u-btn-hollow:hover:before{bottom:-1px;right:-1px;}

    .u-btn-hollow:hover:after{top:-1px;left:-1px;}

    ::-webkit-scrollbar
    {
      width: 6px;
      height: 6px;
    }
    ::-webkit-scrollbar-track-piece
    {
      background-color: #ebeef3;
      -webkit-border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:vertical
    {
      height: 32px;
      background-color: #d8dce4;
      -webkit-border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:horizontal
    {
      width: 32px;
      background-color: #d8dce4;
      -webkit-border-radius: 4px;
    }

    /** 动画效果 **/
    .a-swing1{-webkit-animation: swing1 3500ms linear infinite alternate;-moz-animation: swing1 3500ms linear infinite alternate;animation: swing1 3500ms linear infinite alternate;}
    .a-swing3{-webkit-animation: swing3 1500ms linear infinite alternate;-moz-animation: swing3 1500ms linear infinite alternate;animation: swing3 1500ms linear infinite alternate;}
    .a-bounce{-webkit-animation: bounce 500ms linear infinite alternate;-moz-animation: bounce 500ms linear infinite alternate;animation: bounce 500ms linear infinite alternate;}
    .a-shake{-webkit-animation: shake 5000ms infinite both;-moz-animation: shake 5000ms infinite both;animation: shake 5000ms infinite both;}

    @-webkit-keyframes bounce {
      0% {
        -webkit-transform: translate3d(0, -5px, 0);
                transform: translate3d(0, -5px, 0);
      }
      100% {
        -webkit-transform: translate3d(0, 5px, 0);
                transform: translate3d(0, 5px, 0);
      }
    }

    @-moz-keyframes bounce {
      0% {
        -moz-transform: translate3d(0, -5px, 0);
             transform: translate3d(0, -5px, 0);
      }
      100% {
        -moz-transform: translate3d(0, 5px, 0);
             transform: translate3d(0, 5px, 0);
      }
    }

    @keyframes bounce {
      0% {
        -webkit-transform: translate3d(0, -5px, 0);
           -moz-transform: translate3d(0, -5px, 0);
                transform: translate3d(0, -5px, 0);
      }
      100% {
        -webkit-transform: translate3d(0, 5px, 0);
           -moz-transform: translate3d(0, 5px, 0);
                transform: translate3d(0, 5px, 0);
      }
    }

    @-webkit-keyframes swing1 {
      0% {
        -webkit-transform: rotate(-10deg);
                transform: rotate(-10deg);
      }
      100% {
        -webkit-transform: rotate(10deg);
                transform: rotate(10deg);
      }
    }

    @-moz-keyframes swing1 {
      0% {
        -moz-transform: rotate(-10deg);
             transform: rotate(-10deg);
      }
      100% {
        -moz-transform: rotate(10deg);
             transform: rotate(10deg);
      }
    }

    @keyframes swing1 {
      0% {
        -webkit-transform: rotate(-10deg);
           -moz-transform: rotate(-10deg);
                transform: rotate(-10deg);
      }
      100% {
        -webkit-transform: rotate(10deg);
           -moz-transform: rotate(10deg);
                transform: rotate(10deg);
      }
    }

    @-webkit-keyframes swing3 {
      0% {
        -webkit-transform: rotate(-30deg);
                transform: rotate(-30deg);
      }
      100% {
        -webkit-transform: rotate(30deg);
                transform: rotate(30deg);
      }
    }

    @-moz-keyframes swing3 {
      0% {
        -moz-transform: rotate(-30deg);
             transform: rotate(-30deg);
      }
      100% {
        -moz-transform: rotate(30deg);
             transform: rotate(30deg);
      }
    }

    @keyframes swing3 {
      0% {
        -webkit-transform: rotate(-30deg);
           -moz-transform: rotate(-30deg);
                transform: rotate(-30deg);
      }
      100% {
        -webkit-transform: rotate(30deg);
           -moz-transform: rotate(30deg);
                transform: rotate(30deg);
      }
    }

    @-webkit-keyframes shake {
      from, 11%, to {
        -webkit-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
      }

      1%, 3%, 5%, 7%, 9% {
        -webkit-transform: translate3d(-3px, 0, 0);
                transform: translate3d(-3px, 0, 0);
      }
      2%, 4%, 6%, 8%, 10% {
        -webkit-transform: translate3d(3px, 0, 0);
                transform: translate3d(3px, 0, 0);
      }
    }

    @-moz-keyframes shake {
      from, 11%, to {
        -moz-transform: translate3d(0, 0, 0);
             transform: translate3d(0, 0, 0);
      }

      1%, 3%, 5%, 7%, 9% {
        -moz-transform: translate3d(-3px, 0, 0);
             transform: translate3d(-3px, 0, 0);
      }
      2%, 4%, 6%, 8%, 10% {
        -moz-transform: translate3d(3px, 0, 0);
             transform: translate3d(3px, 0, 0);
      }
    }

    @keyframes shake {
      from, 11%, to {
        -webkit-transform: translate3d(0, 0, 0);
           -moz-transform: translate3d(0, 0, 0);
                transform: translate3d(0, 0, 0);
      }

      1%, 3%, 5%, 7%, 9% {
        -webkit-transform: translate3d(-3px, 0, 0);
           -moz-transform: translate3d(-3px, 0, 0);
                transform: translate3d(-3px, 0, 0);
      }
      2%, 4%, 6%, 8%, 10% {
        -webkit-transform: translate3d(3px, 0, 0);
           -moz-transform: translate3d(3px, 0, 0);
                transform: translate3d(3px, 0, 0);
      }
    }

    @-webkit-keyframes pulse {
      from, to {
        -webkit-transform: scale3d(1, 1, 1);
                transform: scale3d(1, 1, 1);
      }
      25% {
        -webkit-transform: scale3d(1.02, 1.02, 1.02);
                transform: scale3d(1.02, 1.02, 1.02);
      }
      50% {
        -webkit-transform: scale3d(1, 1, 1);
                transform: scale3d(1, 1, 1);
      }
      75% {
        -webkit-transform: scale3d(0.98, 0.98, 0.98);
                transform: scale3d(0.98, 0.98, 0.98);
      }
    }


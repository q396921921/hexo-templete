      }
      75% {
        -moz-transform: scale3d(0.98, 0.98, 0.98);
             transform: scale3d(0.98, 0.98, 0.98);
      }
    }

    @keyframes pulse {
      from, to {
        -webkit-transform: scale3d(1, 1, 1);
           -moz-transform: scale3d(1, 1, 1);
                transform: scale3d(1, 1, 1);
      }

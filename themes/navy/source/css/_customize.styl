#header {
  #logo {
    color: white;
    width: 6rem;
    line-height: 50px;
    text-indent: 0;
    text-decoration: none;
    font-size: 28px;
    font-weight: 700;
  }

  #main-nav {
    a {
      .fa {
        padding-right: 0.4em;
        font-size: 0.9em;
        opacity: 0.7;
      }
      padding: 0 20px 0 10px;
      opacity: 0.9;
    }

    #search-input {
      min-width: 16em;
    }
  }
}


  #sidebar-ad-wrapper {
    margin-top: 30px
  }

  .sidebar-title {
    margin-top: 30px;
  }
}



// 右面导航栏
.m-sd-r {
    position: fixed;
    display: block;
    width: 210px;
    max-height: 480px;
    top: 120px;
    left: 50%;
    margin-left: 450px;
    font-size: 14px;
    z-index: 1;
    /* background-color: #fff; */
    overflow-y: auto;
}
.m-sd-r .m-sd-cnt {
    position: relative;
    font-size: inherit;
    border-left: 1px solid #d5deed;
    overflow: visible;
}
.m-sd-r li {
    margin: 0;
    list-style: none;
    padding-left: 8%;
    width: 92%;
}
ol {
    list-style-type: disc;
}
.m-sd-r ol {
    width: 99%;
    margin: 0;
    padding: 0;
    word-break: break-all;
}
.f-sel {
  color:#0d6ff4;
}
.m-sd-cnt li.f-sel {color:#0d6ff4;}
.m-sd-cnt li.f-sel::before {content:"";display:inline-block;width:12px;height:6px;margin-left:-16px;margin-right:10px;background:#0d6ff4;vertical-align:middle;}
// .m-sd-cnt .toc-cnt-list li.f-sel::before {position:absolute;content:"";display:inline-block;width:12px;height:6px;margin-top:10px;margin-left:-22px;margin-right:10px;background:#0d6ff4;vertical-align:middle;}
// .m-sd-cnt .toc-cnt-sublist li.f-sel::before {position:absolute;content:"";display:inline-block;width:12px;height:6px;margin-top:5px;margin-left:-40px;margin-right:10px;background:#0d6ff4;vertical-align:middle;}

.m-sd-cnt li {
    position: relative;
}
// 右侧菜单不同的h标签的缩进大小
.m-sd-r h2, .m-sd-r h3 {
    display: inline-block;
    margin: 0;
    padding: 0;
    font-size: inherit;
    cursor: pointer;
}
.m-sd-r h2 {
    line-height: 2.4;
}
.m-sd-r h3 {
    width: inherit;
    margin-left: 6px;
    line-height: 2;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.m-sd-cnt .toc-cnt-list h3 {
    font-size: 14px;
}
#toccnt .f-toggle {
    position: absolute;
    display: inline-block;
    top: 0;
    right: 4px;
    width: 8px;
    height: 12px;
    margin: 8px;
    vertical-align: middle;
    cursor: pointer;
}
#toccnt .f-toggle {
    background-position: -4px 0;
}
#toccnt .f-toggle.f-toggle-minus {
    background-image: url(../../img/blue_up.png);
}
#toccnt .f-toggle.f-toggle-plus {
    background-image: url(../../img/blue_down.png);
}